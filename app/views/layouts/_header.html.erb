<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
  
  	<span class="brand">
      <%= link_to "PhotoDrewz", root_path, class: "brand" %>
    </span>
 
      <div class="nav-menu">
      	<% if @show_view %>
	      	<ul class="nav">
	      		<li><%= link_to "Back", root_path %></li>
	        	<li><%= link_to "Edit", edit_picture_path(@picture) %></li>
	        	<li><%= link_to "Delete", @picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %></li>
					</ul>
				<% elsif @edit_view %>
					<ul class="nav">
	        	<li><%= link_to "Back", "pictures/#{@picture.id}" %></li>
	      		<li><%= link_to "Delete", @picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %></li>
					</ul>
				<% else %>
					<ul class="nav">
	        	<li><%= link_to "Add+", new_picture_path %></li>
	      		<!-- link to view pictures in table -->
					</ul>
				<% end %>
      </div>
 
    </div>
  </div>
</div>
